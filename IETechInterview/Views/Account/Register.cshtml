@model IETechInterview.Models.LoginViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Registration</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "registration-form" }))
{
    @Html.LabelFor(m => m.Username)
    @Html.TextBoxFor(m => m.Username)
    <br />

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)
    <br />

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)
    <br />

    <input type="submit" value="Register" class="submit-button" /> <a asp-action="Index" asp-controller="Home">Back to Login</a>
}
